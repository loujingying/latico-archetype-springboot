    <logger name="com.alibaba.druid" level="debug" additivity="true">
        <appender-ref ref="druid"/>
    </logger>

    <!-- 根日志，必须放到最下面 -->
    <root level="debug">
        <appender-ref ref="console"/>
        <appender-ref ref="exception"/>
    </root>
</configuration>