    </appender>
    <!-- mybatis程序日志 -->
    <logger name="org.mybatis" level="debug" additivity="true">
        <appender-ref ref="mybatis"/>
    </logger>
    <logger name="org.apache.ibatis" level="debug" additivity="true">
        <appender-ref ref="mybatis"/>
    </logger>
    <logger name="com.baomidou.mybatisplus" level="debug" additivity="true">
        <appender-ref ref="mybatis"/>
    </logger>

    <!-- mybatis程序日志器 -->
